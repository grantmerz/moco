import torch.nn as nn
import torch

class decoder(nn.Module):
    def __init__(self, input_dim, output_shape):
        super().__init__()
        #self.t_conv1 = nn.ConvTranspose2d(48, 24, 4, stride=2,padding=1)
        #self.t_conv2 = nn.ConvTranspose2d(24, 8, 4, stride=2,padding=1)
        #self.t_conv3 = nn.Conv2d(8, 3, 3, stride=1,padding=1)
        
        self.t_conv1 = nn.ConvTranspose2d(3, 128, 3, stride=1,padding=1)
        self.t_conv2 = nn.ConvTranspose2d(128, 64, 3, stride=1,padding=1)
        self.t_conv3 = nn.Conv2d(64, 32, 3, stride=1,padding=1)
        self.t_conv4 = nn.Conv2d(32, 16, 3, stride=1,padding=1)
        self.t_conv5 = nn.Conv2d(16, 3, 3, stride=1,padding=1)

        
        self.relu = nn.ReLU(inplace=True)
        self.sigmoid = nn.Sigmoid()
        self.fcd1 = nn.Linear(input_dim, 3*128*128)
        
        #self.unflatten = nn.Unflatten(1,
        #unflattened_size=(48, 32, 32))

        self.unflatten = nn.Unflatten(1,
        unflattened_size=output_shape)

    def forward(self, x):
        x = self.fcd1(x)
        x = self.unflatten(x)
        x = self.t_conv1(x)
        x = self.relu(x)
        x = self.t_conv2(x)
        x = self.relu(x)
        x = self.t_conv3(x)
        x = self.relu(x)
        x = self.t_conv4(x)
        x = self.relu(x)
        x = self.t_conv5(x)
        recon = self.sigmoid(x)
        return recon
